{
  "schemaVersion": 1,
  "id": "tputils",
  "version": "${version}",

  "name": "TP Utils",
  "description": "Teleport utility mod, making it much easier to get around.",
  "authors": [
    "Sjouwer",
    "Kyzeragon"
  ],
  "contributors": [
    "zh-cn: buiawpkgew1"
  ],

  "contact": {
    "homepage": "https://www.curseforge.com/minecraft/mc-mods/tp-utils",
    "sources": "https://github.com/Sjouwer/tp-utils",
    "issues": "https://github.com/Sjouwer/tp-utils/issues"
  },

  "license": "GNU LGPLv3",
  "icon": "assets/tputils/icon.png",

  "environment": "client",
